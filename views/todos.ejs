<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, maximum-scale=1"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
      integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link href="/dist/output.css" rel="stylesheet" />
    <title>To Do</title>
  </head>

  <body class="font-body">
    <header
      class="bg-bgDesktop bg-cover bg-no-repeat h-[230px] relative lg:h-[300px]"
    >
      <a href="/logout" class="">Logout</a>
      <h1
        class="text-white text-3xl font-medium tracking-[0.4em] py-12 px-6 lg:pt-[70px] lg:px-[350px] xl:px-[450px]"
      >
        TODO
      </h1>
    </header>

    <form
      method="post"
      action="/toDos/addToDo"
      class="absolute top-20 left-0 right-0 pt-10 px-6 lg:pt-[70px] lg:px-[350px] xl:px-[450px]"
    >
      <div class="bg-white flex items-center rounded-md pl-5">
        <img src="/images/icons/checkbox.svg" />
        <input
          type="text"
          name="toDo"
          placeholder="Create a new todo..."
          class="text-sm font-normal w-full rounded-md py-[18px] px-3"
        />
      </div>
    </form>

    <section class="bg-bgBody w-screen h-screen">
      <ul
        class="bg-white max-w-full absolute top-44 left-0 right-0 rounded-md shadow-small mt-4 mx-6 lg:mt-14 lg:mx-[350px] xl:mx-[450px]"
      >
        <% items.forEach(elem => { %>
        <li
          data-id="<%= elem._id %>"
          class="text-greyPurple text-sm flex items-center gap-3 border-b-[1px] px-5 py-[18px]"
        >
          <img
            onclick="updateCompleteStatus(this)"
            class="<%= elem.completed === true ? 'completed' : 'not-completed' %>"
            src="<%= elem.completed === true ? '/images/icons/completed-checkbox.svg' : '/images/icons/checkbox.svg' %>"
          />
          <span
            id="toDo"
            onclick="updateCompleteStatus(this)"
            class="<%= elem.completed === true ? 'text-completed line-through mr-auto completed' : 'mr-auto not-completed' %>"
            ><%= elem.toDo %></span
          >
          <button id="deleteToDo">
            <img src="/images/icons/delete.svg" class="w-3 h-3" />
          </button>
        </li>
        <% }) %>

        <li
          class="text-lightGrey text-sm flex justify-between items-center px-6 py-[18px]"
        >
          <span><%= left %> items left</span>
          <button id="clearCompleted">Clear Completed</button>
        </li>
      </ul>

      <!-- <div
        class="text-lightGrey text-sm bg-white max-w-full absolute bottom-0 left-0 right-0 flex justify-center gap-[18px] rounded-md shadow-small py-[18px] mx-6"
      >
        <button>All</button>
        <button>Active</button>
        <button>Completed</button>
      </div> -->
    </section>

    <script src="/js/main.js"></script>
  </body>
</html>
